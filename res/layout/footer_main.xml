<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/action_bar"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity=""
    android:background="@color/grey_bgcolor"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/recommand_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/history_normal"
        android:text="@string/recommand_history"
        android:textColor="@color/normal_color"
        android:textSize="@dimen/font_16" />

    <TextView
        android:id="@+id/recommand_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/recommand_history"
        android:layout_alignBottom="@+id/recommand_history"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dp"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/recommend_down"
        android:text="@string/recommand_today"
        android:textColor="@color/down_color"
        android:textSize="@dimen/font_16" />

    <TextView
        android:id="@+id/self_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/recommand_history"
        android:layout_alignBottom="@+id/recommand_history"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:drawablePadding="4dp"
        android:drawableTop="@drawable/homepage_normal"
        android:text="@string/self_page"
        android:textColor="@color/normal_color"
        android:textSize="@dimen/font_16" />

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_above="@+id/recommand_history"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="5dp"
        android:background="?android:attr/listDivider" />

</RelativeLayout>