<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/showpage_title"
        layout="@layout/bar_homepage"
        android:visibility="visible" />

    <ScrollView
        android:id="@+id/showpage_scrollView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/showpage_title"
        android:layout_marginBottom="50dp" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_bgcolor"
            android:orientation="vertical"
            android:paddingBottom="0dp" >

            <HorizontalScrollView
                android:id="@+id/photo_row"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/photo_width"
                android:layout_alignParentLeft="true"
                android:scrollbars="@null" >

                <LinearLayout
                    android:id="@+id/photo_row_1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/photo_width"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="@dimen/photo_width"
                        android:layout_height="@dimen/photo_width"
                        android:contentDescription="@string/desc"
                        android:padding="@dimen/photo_padding"
                        android:src="@drawable/girl4" />

                    <ImageView
                        android:layout_width="@dimen/photo_width"
                        android:layout_height="@dimen/photo_width"
                        android:contentDescription="@string/desc"
                        android:padding="@dimen/photo_padding"
                        android:src="@drawable/girl2" />

                    <ImageView
                        android:layout_width="@dimen/photo_width"
                        android:layout_height="@dimen/photo_width"
                        android:contentDescription="@string/desc"
                        android:padding="@dimen/photo_padding"
                        android:src="@drawable/girl6" />

                    <ImageView
                        android:layout_width="@dimen/photo_width"
                        android:layout_height="@dimen/photo_width"
                        android:contentDescription="@string/desc"
                        android:padding="@dimen/photo_padding"
                        android:src="@drawable/girl7" />

                    <ImageView
                        android:layout_width="@dimen/photo_width"
                        android:layout_height="@dimen/photo_width"
                        android:contentDescription="@string/desc"
                        android:padding="@dimen/photo_padding"
                        android:src="@drawable/girl1" />

                    <ImageView
                        android:layout_width="@dimen/photo_width"
                        android:layout_height="@dimen/photo_width"
                        android:contentDescription="@string/desc"
                        android:padding="@dimen/photo_padding"
                        android:src="@drawable/girl2" />
                </LinearLayout>
            </HorizontalScrollView>

            <TableLayout
                android:id="@+id/table01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/photo_row"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:background="@drawable/write_bg" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/table_row_height" >

                    <TextView
                        android:id="@+id/basic_info"
                        android:layout_width="@dimen/table_column1_width"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="@string/basic_info"
                        android:textColor="@color/grey_font_color_2"
                        android:textSize="@dimen/font_28" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/table_row_height"
                        android:layout_marginLeft="@dimen/basic_name_margin"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/basicinfo_tag_style"
                            android:text="@string/info1_value"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/basicinfo_tag_style"
                            android:text="@string/star_value"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/basicinfo_tag_style"
                            android:text="@string/info2_value"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_28" />
                    </LinearLayout>
                </TableRow>

                <ImageView
                    android:id="@+id/line02"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/shape_line" />

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/shuoshuo"
                        android:layout_width="@dimen/table_column1_width"
                        android:layout_height="@dimen/table_row_height"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="@string/shuoshuo"
                        android:textColor="@color/grey_font_color_2"
                        android:textSize="@dimen/font_28" />

                    <TextView
                        android:id="@+id/school1"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:layout_marginLeft="@dimen/basic_name_margin"
                        android:layout_marginRight="@dimen/margin_right"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:singleLine="false"
                        android:text="@string/shuoshuo_value"
                        android:lineSpacingMultiplier="1.2"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/font_28" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/table02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/table01"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:background="@drawable/write_bg" >

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/table_row_height" >

                    <TextView
                        android:id="@+id/education"
                        android:layout_width="@dimen/table_column1_width"
                        android:layout_height="@dimen/table_row_height"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="@string/education"
                        android:textColor="@color/grey_font_color_2"
                        android:textSize="@dimen/font_28" />

                    <TextView
                        android:id="@+id/education1"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/basic_name_margin"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="@string/education_value"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/font_28" />
                </TableRow>

                <ImageView
                    android:id="@+id/line03"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/shape_line" />

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/table_row_height" >

                    <TextView
                        android:id="@+id/hometown"
                        android:layout_width="@dimen/table_column1_width"
                        android:layout_height="@dimen/table_row_height"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="@string/hometown"
                        android:textColor="@color/grey_font_color_2"
                        android:textSize="@dimen/font_28" />

                    <TextView
                        android:id="@+id/hometown1"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="@dimen/basic_name_margin"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="@string/hometown_value"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/font_28" />
                </TableRow>

                <ImageView
                    android:id="@+id/line04"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/shape_line" />

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/table_row_height" >

                    <TextView
                        android:id="@+id/hobby"
                        android:layout_width="@dimen/table_column1_width"
                        android:layout_height="@dimen/table_row_height"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="@string/hobby_tag"
                        android:textColor="@color/grey_font_color_2"
                        android:textSize="@dimen/font_28" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/table_row_height"
                        android:layout_marginLeft="@dimen/basic_name_margin"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/hobby_tag_bg"
                            android:paddingBottom="@dimen/font_top_buttom"
                            android:paddingLeft="@dimen/font_left_right"
                            android:paddingRight="@dimen/font_left_right"
                            android:paddingTop="@dimen/font_top_buttom"
                            android:text="@string/hobby_tag1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@color/hobby_tag_bg"
                            android:paddingBottom="@dimen/font_top_buttom"
                            android:paddingLeft="@dimen/font_left_right"
                            android:paddingRight="@dimen/font_left_right"
                            android:paddingTop="@dimen/font_top_buttom"
                            android:text="@string/hobby_tag2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@color/hobby_tag_bg"
                            android:paddingBottom="@dimen/font_top_buttom"
                            android:paddingLeft="@dimen/font_left_right"
                            android:paddingRight="@dimen/font_left_right"
                            android:paddingTop="@dimen/font_top_buttom"
                            android:text="@string/hobby_tag3"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@color/hobby_tag_bg"
                            android:paddingBottom="@dimen/font_top_buttom"
                            android:paddingLeft="@dimen/font_left_right"
                            android:paddingRight="@dimen/font_left_right"
                            android:paddingTop="@dimen/font_top_buttom"
                            android:text="@string/hobby_tag4"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_28" />
                    </LinearLayout>
                </TableRow>

                <ImageView
                    android:id="@+id/line05"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/shape_line" />

                <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/table_row_height" >

                    <TextView
                        android:id="@+id/personal_tag"
                        android:layout_width="@dimen/table_column1_width"
                        android:layout_height="@dimen/table_row_height"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="@string/personal_tag"
                        android:textColor="@color/grey_font_color_2"
                        android:textSize="@dimen/font_28" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/table_row_height"
                        android:layout_marginLeft="@dimen/basic_name_margin"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/personal_tag_bg"
                            android:paddingBottom="@dimen/font_top_buttom"
                            android:paddingLeft="@dimen/font_left_right"
                            android:paddingRight="@dimen/font_left_right"
                            android:paddingTop="@dimen/font_top_buttom"
                            android:text="@string/personal_tag1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@color/personal_tag_bg"
                            android:paddingBottom="@dimen/font_top_buttom"
                            android:paddingLeft="@dimen/font_left_right"
                            android:paddingRight="@dimen/font_left_right"
                            android:paddingTop="@dimen/font_top_buttom"
                            android:text="@string/personal_tag2"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@color/personal_tag_bg"
                            android:paddingBottom="@dimen/font_top_buttom"
                            android:paddingLeft="@dimen/font_left_right"
                            android:paddingRight="@dimen/font_left_right"
                            android:paddingTop="@dimen/font_top_buttom"
                            android:text="@string/personal_tag3"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_28" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:background="@color/personal_tag_bg"
                            android:paddingBottom="@dimen/font_top_buttom"
                            android:paddingLeft="@dimen/font_left_right"
                            android:paddingRight="@dimen/font_left_right"
                            android:paddingTop="@dimen/font_top_buttom"
                            android:text="@string/personal_tag4"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_28" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>