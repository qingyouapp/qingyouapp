<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_bgcolor" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:id="@+id/table01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:background="@drawable/write_bg"
                android:visibility="visible" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/table_row_height" >

                    <TextView
                        android:id="@+id/match_degree"
                        android:layout_width="@dimen/table_column1_width"
                        android:layout_height="@dimen/table_row_height"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="@string/match_degree"
                        android:textColor="@color/grey_font_color_2"
                        android:textSize="@dimen/font_28" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/table_row_height"
                        android:layout_marginLeft="@dimen/basic_name_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <!--
                             <SeekBar
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:max="100"
                            android:progress="80"
                            android:progressDrawable="@drawable/seekbar"
                            android:thumb="@null" />
                        -->

                        <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="200dp"
                            android:layout_height="10dp"
                            android:max="100"
                            android:progress="80"
                            android:progressDrawable="@drawable/seekbar" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="@string/match_degree_num"
                            android:textColor="@color/font_color"
                            android:textSize="@dimen/font_28" />

                    </LinearLayout>
                </TableRow>

                <ImageView
                    android:id="@+id/line01"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/shape_line" />

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/table_row_height" >

                    <TextView
                        android:id="@+id/recom_degree"
                        android:layout_width="@dimen/table_column1_width"
                        android:layout_height="@dimen/table_row_height"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="@string/recom_degree"
                        android:textColor="@color/grey_font_color_2"
                        android:textSize="@dimen/font_28" />

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="@dimen/table_row_height"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <RatingBar
                            style="@style/myRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="3.5" />
                    </LinearLayout>
                </TableRow>

                <ImageView
                    android:id="@+id/line02"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/shape_line" />

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp" >

                    <TextView
                        android:id="@+id/recom_reason"
                        android:layout_width="@dimen/table_column1_width"
                        android:layout_height="@dimen/table_row_height"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="@string/recom_reason"
                        android:textColor="@color/grey_font_color_2"
                        android:textSize="@dimen/font_28" />

                    <TextView
                        android:id="@+id/recom_reason_value"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        android:layout_marginLeft="@dimen/basic_name_margin"
                        android:layout_marginRight="@dimen/margin_right"
                        android:background="@null"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:lineSpacingMultiplier="1.3"
                        android:singleLine="false"
                        android:text="@string/recom_reason_value"
                        android:textColor="@color/normal_color"
                        android:textSize="@dimen/font_28" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:id="@+id/table02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_top"
                android:background="@drawable/write_bg"
                android:visibility="visible" >

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/table_row_height" >

                    <TextView
                        android:id="@+id/hot_degree"
                        android:layout_width="@dimen/table_column1_width"
                        android:layout_height="@dimen/table_row_height"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="@string/hot_degree"
                        android:textColor="@color/grey_font_color_2"
                        android:textSize="@dimen/font_28" />

                    <RelativeLayout
                        android:id="@+id/layout01"
                        android:layout_width="200dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="@dimen/basic_name_margin"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/red_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/red_star"
                            android:drawablePadding="5dp"
                            android:text="@string/hot_num_2"
                            android:textColor="@color/hot_red"
                            android:textSize="@dimen/font_72" />

                        <ImageView
                            android:id="@+id/red_star"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/red_text"
                            android:layout_alignParentLeft="true"
                            android:layout_marginBottom="9dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="3dp"
                            android:contentDescription="@string/desc"
                            android:src="@drawable/intimacy_red" />

                        <ImageView
                            android:id="@+id/blue_star"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/red_star"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="3dp"
                            android:layout_toRightOf="@+id/red_text"
                            android:contentDescription="@string/desc"
                            android:src="@drawable/intimacy_blue" />

                        <TextView
                            android:id="@+id/blue_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@+id/red_text"
                            android:layout_alignBottom="@+id/red_text"
                            android:layout_toRightOf="@+id/blue_star"
                            android:drawablePadding="5dp"
                            android:text="@string/hot_num_1"
                            android:textColor="@color/hot_blue"
                            android:textSize="@dimen/font_72" />
                    </RelativeLayout>
                </TableRow>

                <ImageView
                    android:id="@+id/line1201"
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:contentDescription="@string/desc"
                    android:src="@drawable/shape_line" />

                <TableRow
                    android:id="@+id/tableR12ow3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="10dp" >

                    <TextView
                        android:id="@+id/hot_desc"
                        android:layout_width="@dimen/table_column1_width"
                        android:layout_height="@dimen/table_row_height"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:gravity="center_vertical"
                        android:includeFontPadding="false"
                        android:text="@string/hot_desc"
                        android:textColor="@color/grey_font_color_2"
                        android:textSize="@dimen/font_28" />

                    <TextView
                        android:id="@+id/hot_desc_value"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        android:layout_marginLeft="@dimen/basic_name_margin"
                        android:layout_marginRight="@dimen/margin_right"
                        android:background="@null"
                        android:ems="10"
                        android:gravity="center_vertical"
                        android:lineSpacingMultiplier="1.3"
                        android:singleLine="false"
                        android:text="@string/hot_desc_value"
                        android:textColor="@color/normal_color"
                        android:textSize="@dimen/font_28" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>